  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@latitude-data/cli": "workspace:*",
    "@latitude-data/typescript": "workspace:*",
    "prettier": "^3.1.1",
    "turbo": "^1.13.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@latitude-data/duckdb-connector": "workspace:*"
  }
}
