  "author": "Latitude Data",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "lint": "turbo lint",
    "tc": "turbo tc",
    "test": "turbo test",
    "build": "turbo build",
    "prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
