{
  "name": "@latitude-data/client",
  "description": "Core package of all Latitude client libraries",
  "version": "0.10.0-next.3",
  "license": "LGPL",
  "scripts": {
    "build:rollup": "rollup -c",
    "dev": "pnpm run build:rollup -w",
    "build": "npm run build:rollup",
    "prettier": "prettier --write src/**/*.ts",
    "lint": "eslint . --max-warnings 0 --ext .ts src",
    "tc": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "main": "src/index.ts",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./theme/preset": "./tailwind.config.js",
    "./latitude.css": "./dist/latitude.css"
  },
  "files": [
    "dist",
    "tailwind.config.js",
    "!dist/**/*.test.*"
  ],
  "dependencies": {
    "@latitude-data/custom_types": "workspace:^",
    "@latitude-data/query_result": "workspace:*",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "echarts": "^5.5.0",
    "lodash-es": "^4.17.21",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@latitude-data/eslint-config": "workspace:*",
    "@latitude-data/typescript": "workspace:*",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/lodash-es": "^4.17.12",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "rollup": "^4.10.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "vitest": "^1.2.2"
  }
}
