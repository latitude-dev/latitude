{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es2022",
    "target": "es2022",
    "types": [
      "vite/client",
      "node",
      "@types/intercom-web",
      "vite-plugin-svgr/client"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
