{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "PACKAGE_VERSION",
    "LATITUDE_TARGET",
    "TELEMETRY_CLIENT_KEY",
    "TELEMETRY_URL",
    "CLI_SENTRY_ENABLED",
    "CLI_SENTRY_DSN",
    "LATITUDE_SERVER_HOST",
    "LATITUDE_SERVER_PORT"
  ],
  "pipeline": {
    "prettier": {
      "dependsOn": ["^prettier"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "tc": {
      "dependsOn": ["^tc"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
