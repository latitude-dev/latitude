{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON schema for this document, also used as a version indicator."
    },
    "appVersion": {
      "type": "string",
      "minLength": 5,
      "maxLength": 14,
      "pattern": "^(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)\\.(?:0|[1-9]\\d*)$",
      "description": "Latitude app version used."
    },
    "deployPlatform": {
      "type": "string",
      "enum": ["vercel", "netlify", "aws", "cloudflare", "nodejs"],
      "default": "nodejs",
      "description": "Platform where the app is deployed (By default, it is nodejs)."
    }
  },
  "required": ["$schema", "appVersion"],
  "additionalProperties": false
}
